source 'http://rubygems.org'

gem 'rails', '3.1.1'

group :development do
  gem 'sqlite3'
  gem 'capistrano'  # delivery mechanism
end

group :production do
  # thin webserver
  gem 'thin'
  gem 'mysql2', '0.3.7'

  # for asset precompilation
  gem 'coffee-script'
  gem 'therubyracer'
  gem 'uglifier'
end

# common
gem 'json'
gem 'jquery-rails'
gem 'sass'

# sorcery authentication
gem 'sorcery'

# exception notification
gem 'exception_notification'

# To use debugger (ruby-debug for Ruby 1.8.7+, ruby-debug19 for Ruby 1.9.2+)
# gem 'ruby-debug'
# gem 'ruby-debug19'

